
## <summary>policy for seed2need</summary>


########################################
## <summary>
##	Transition to seed2need.
## </summary>
## <param name="domain">
## <summary>
##	Domain allowed to transition.
## </summary>
## </param>
#
interface(`seed2need_domtrans',`
	gen_require(`
		type seed2need_t, seed2need_exec_t;
	')

	corecmd_search_bin($1)
	domtrans_pattern($1, seed2need_exec_t, seed2need_t)
')


########################################
## <summary>
##	Execute seed2need server in the seed2need domain.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`seed2need_initrc_domtrans',`
	gen_require(`
		type seed2need_initrc_exec_t;
	')

	init_labeled_script_domtrans($1, seed2need_initrc_exec_t)
')


########################################
## <summary>
##	Search seed2need lib directories.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`seed2need_search_lib',`
	gen_require(`
		type seed2need_var_lib_t;
	')

	allow $1 seed2need_var_lib_t:dir search_dir_perms;
	files_search_var_lib($1)
')

########################################
## <summary>
##	Read seed2need lib files.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`seed2need_read_lib_files',`
	gen_require(`
		type seed2need_var_lib_t;
	')

	files_search_var_lib($1)
	read_files_pattern($1, seed2need_var_lib_t, seed2need_var_lib_t)
')

########################################
## <summary>
##	Manage seed2need lib files.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`seed2need_manage_lib_files',`
	gen_require(`
		type seed2need_var_lib_t;
	')

	files_search_var_lib($1)
	manage_files_pattern($1, seed2need_var_lib_t, seed2need_var_lib_t)
')

########################################
## <summary>
##	Manage seed2need lib directories.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`seed2need_manage_lib_dirs',`
	gen_require(`
		type seed2need_var_lib_t;
	')

	files_search_var_lib($1)
	manage_dirs_pattern($1, seed2need_var_lib_t, seed2need_var_lib_t)
')


########################################
## <summary>
##	All of the rules required to administrate
##	a seed2need environment
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
## <param name="role">
##	<summary>
##	Role allowed access.
##	</summary>
## </param>
## <rolecap/>
#
interface(`seed2need_admin',`
	gen_require(`
		type seed2need_t;
		type seed2need_initrc_exec_t;
		type seed2need_var_lib_t;
	')

	allow $1 seed2need_t:process { ptrace signal_perms };
	ps_process_pattern($1, seed2need_t)

	seed2need_initrc_domtrans($1)
	domain_system_change_exemption($1)
	role_transition $2 seed2need_initrc_exec_t system_r;
	allow $2 system_r;

	files_search_var_lib($1)
	admin_pattern($1, seed2need_var_lib_t)

')

